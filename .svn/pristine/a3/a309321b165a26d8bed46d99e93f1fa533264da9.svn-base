* {
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    font-size: 14px;
}

html,
body {
    width: 100%;
    min-height: 100%;
    height: 100%;
    overflow-x: hidden;
    background: #fff;
}

html {
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

li,
ul,
dl,
dt,
dd {
    list-style: none;
    margin: 0;
    padding: 0;
}

body,
button,
input,
select,
textarea,
img {
    font-family: "microsoft yahei", helvetica, verdana, san-serif;
    outline: 0;
    color: #000;
}

body {
    min-width: 320px;
    background: #fff;
    overflow: hidden;
}

#app {
    font-family: 'Avenir', Helvetica, Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-align: center;
    color: #2c3e50;
}

.clearfix:after {
    content: " ";
    display: block;
    visibility: hidden;
    line-height: 0;
    clear: both;
    height: 0;
}

.clearfix {
    zoom: 1;
}